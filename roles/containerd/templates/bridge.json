{
  "cniVersion": "1.0.0",
  "name": "containerd",
  "plugins": [
    {
      "type": "bridge",
      "bridge": "cni0",
      "isGateway": true,
      "ipMasq": true,
      "hairpinMode": true,
      "ipam": {
        "type": "host-local",
        "routes": [{ "dst": "0.0.0.0/0" }],
        "ranges": [
          [{ "subnet": "{{ pod_range }}" }]
        ]
      }
    }
  ]
}
